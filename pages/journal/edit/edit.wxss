/* pages/journal/edit/edit.wxss */
page {
  background-color: #f7f8fa;
}
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}
.main-content {
  flex: 1;
  padding: 32rpx;
}
.textarea-field {
  background-color: #ffffff !important;
  border-radius: 16rpx;
  padding: 24rpx !important;
  min-height: 300rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  display: block !important;
  width: 100% !important;
  box-sizing: border-box;
}
.mood-selector {
  margin-top: 48rpx;
  padding: 24rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
}
.mood-label {
  font-size: 28rpx;
  color: #646566;
  margin-right: 24rpx;
}
.mood-options {
  display: flex;
  flex: 1;
  justify-content: space-around;
}
.mood-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease-in-out;
}
.mood-emoji {
  font-size: 52rpx;
}
.mood-item.selected {
  background-color: #eef2f8;
  transform: scale(1.1);
}
.footer {
  padding: 32rpx;
  background-color: #f7f8fa;
}

