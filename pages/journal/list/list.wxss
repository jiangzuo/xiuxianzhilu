/* pages/journal/list/list.wxss */
page { background-color: #f7f8fa; }
.container { padding: 32rpx; padding-bottom: 200rpx; }
.journal-item { background-color: #ffffff; border-radius: 16rpx; padding: 32rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); transition: all 0.2s ease-in-out; }
.journal-item:active { transform: scale(0.98); }
.item-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24rpx; padding-bottom: 16rpx; border-bottom: 1px solid #ebedf0; }
.item-date { font-size: 26rpx; color: #969799; }
.item-mood-icon { font-size: 48rpx; /* Emoji 使用 font-size 调整大小 */ }
.item-content { font-size: 28rpx; color: #323233; line-height: 1.8; overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; }
.empty-container { margin-top: 200rpx; }
.add-button-container { position: fixed; bottom: 0; left: 0; right: 0; padding: 24rpx 64rpx 64rpx; background: linear-gradient(to top, #f7f8fa, rgba(247, 248, 250, 0)); }
.add-button { box-shadow: 0 8rpx 16rpx rgba(74, 144, 226, 0.3); }