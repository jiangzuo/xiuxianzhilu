/* pages/settings/settings.wxss */
page {
  background-color: #ffffff;
  color: #333;
}
.container {
  padding: 0;
}

/* --- 【最终决战方案】手写 Tabs 下划线 --- */
.van-tabs__scroll {
  width: 100% !important;
  overflow: hidden !important;
}
.van-tabs__nav {
  background-color: #ffffff !important;
  display: flex !important;
  width: 100% !important;
  padding: 0 !important;
  margin: 0 !important;
  position: relative !important;
}
.van-tabs__line {
  display: none !important;
}
.van-tab {
  color: #666 !important;
  flex: 1 !important;
  padding: 0 !important;
  margin: 0 !important;
  position: relative !important;
  z-index: 2;
}
.van-tab--active {
  color: #4a90e2 !important;
}
.van-tab--active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 2em;
  height: 3px;
  background-color: #4a90e2;
  border-radius: 3px;
  z-index: 1;
}

/* 功法卡片网格容器 */
.gongfa-grid-container {
  display: flex;
  flex-wrap: wrap;
  padding: 32rpx;
  gap: 24rpx;
  background-color: #f7f8fa;
}
.gongfa-item {
  position: relative;
  width: calc(50% - 12rpx);
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}
.gongfa-item-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.gongfa-book-icon {
  width: 100%;
  height: 100%;
}
.gongfa-item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  min-height: 70rpx;
}
.gongfa-item-exp {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.delete-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}
.add-gongfa-btn {
  border: 1px dashed #ddd;
  box-shadow: none;
}
.add-text {
  color: #999;
}
/* picker-view 样式 */
.picker-container {
  background-color: #ffffff;
}
.picker-toolbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1px solid #ebedf0;
}
.picker-title {
  font-size: 32rpx;
  color: #333;
}
.picker-button {
  padding: 0 32rpx;
  font-size: 30rpx;
}
.picker-button.cancel {
  color: #666;
}
.picker-button.confirm {
  color: #4a90e2;
  font-weight: 500;
}
.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}
.readonly-item {
  opacity: 0.5;
}