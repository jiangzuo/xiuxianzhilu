/* pages/practice/practice.wxss (最终大头部固定版) */

page {
  height: 100%;
  overflow: hidden;
  background-color: #ECE9DD;
}

.page-wrapper {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: calc(50px + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.header-container {
  flex-shrink: 0;
  background-color: #ECE9DD;
}
.custom-nav {
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.nav-title {
  font-size: 34rpx;
  font-weight: 500;
}
.header-tabs /deep/ .van-tabs__content {
  display: none;
}

.scroll-container {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* --- Tabs 导航栏的美化样式 --- */
.practice-tabs-nav {
  background-color: #ECE9DD !important; 
}
.practice-tab {
  color: #888 !important;
}
.practice-tab-active {
  color: #3a3a3a !important;
  font-weight: 500;
}
.van-tabs__line {
  display: none !important;
}
.practice-tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 2em;
  height: 3px;
  background-color: #3BB89B;
  border-radius: 3px;
}

/* --- 内容区域及其他组件样式 (保持不变) --- */
.container {
  padding: 32rpx;
}
.category-exp-header {
  padding: 0;
  margin: 0rpx 0 32rpx; 
  color: #FF8D28;
  font-size: 28rpx;
  text-align: center;
}
.exp-number {
  color: #FF8D28;
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 8rpx;
}
.gongfa-grid-container { 
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 36rpx; 
}
.gongfa-item {
  
  background-color: #DEDEDE; 
  
  /* 3. 添加阴影 */
  box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.08); 
  
  border-radius: 24rpx; /* 增加圆角，配合阴影更好看 */
  padding: 32rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.gongfa-book-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}
.gongfa-item-name {
  font-size: 28rpx;
  color: #3a3a3a;
  font-weight: 500;
}
.gongfa-item-count {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 空状态 (保持不变) */
.empty-state {
  width: 100%;
  text-align: center;
  padding: 100rpx 0;
}
.empty-text {
  color: #969799;
  font-size: 28rpx;
}
.empty-link {
  color: #4a90e2;
  margin-top: 16rpx;
  display: inline-block;
}

/* 弹窗样式 (保持不变) */
.loading-mask { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0, 0, 0, 0.7); display: flex; justify-content: center; align-items: center; z-index: 100; }
.loading-content { width: 70%; text-align: center; }
.loading-text { color: #fff; font-size: 32rpx; margin-bottom: 24rpx; }
.loading-bar { width: 100%; height: 16rpx; background-color: #555; border-radius: 8rpx; overflow: hidden; }
.loading-bar-inner { width: 0%; height: 100%; background: linear-gradient(to right, #ffd700, #ffb347); border-radius: 8rpx; animation-name: loading-progress; animation-timing-function: linear; animation-fill-mode: forwards; }
@keyframes loading-progress { from { width: 0%; } to { width: 100%; } }
/* --- 【核心改造】境界突破弹窗 --- */
.level-up-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
  padding: 64rpx;
  box-sizing: border-box;
}

.level-up-bg {
  position: absolute;
  width: 90%;
  max-width: 680rpx;
  z-index: 1;
}

.level-up-content {
  width: 90%;
  max-width: 680rpx;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  transform: scale(0.5);
  opacity: 0;
}

/* 【核心改造】顶部的法球 */
.level-up-orb-wrapper {
  position: relative;
  width: 360rpx; 
  height: 360rpx;
  margin-top: -120rpx;
}
.level-up-orb-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.level-up-orb-text {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  white-space: pre-wrap;
  text-align: center;
}
/* 移除不再需要的 .realm-text 样式 */

/* 2. 放大境界文字 */
.level-text {
  font-size: 72rpx; /* 增大字号 */
  font-weight: bold; /* 加粗 */
  line-height: 1.3;
}


/* 中间的描述文字 */
.level-up-desc {
  font-size: 28rpx;
  color: #5c5241; /* 棕褐色 */
  line-height: 1.8;
  text-align: justify;
  margin-top: 48rpx;
  padding: 0 48rpx;
}

/* 底部的确认按钮 */
.level-up-confirm {
  width: 240rpx;
  height: 80rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 64rpx;
}
.confirm-button-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.confirm-button-text {
  position: relative;
  font-size: 28rpx;
  font-weight: 500;
  color: #fff;
}
.settlement-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 900;
}

/* 1. 弹窗容器：设为相对定位，作为内部元素的坐标系 */
.settlement-mask .dialog-container {
  width: 80%;
  max-width: 600rpx;
  position: relative; /* 关键：让内部的 absolute 元素以此为基准 */
  font-family: 'LishuFont', sans-serif;
  animation: popIn 0.3s ease-out;
  /* 不需要设背景色，因为有图片背景 */
}

/* 2. 背景图：绝对定位，铺满整个容器，并置于底层 */
.settlement-mask .dialog-bg {
  position: absolute; /* 关键：脱离文档流 */
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1; /* 放在最底层 */
  border-radius: 12rpx; /* 可选：稍微圆角一点 */
}

/* 3. 内容区域：相对定位，撑开高度，置于顶层 */
.settlement-mask .dialog-content {
  position: relative; /* 关键：让内容浮在背景图上面 */
  z-index: 2; /* 比背景图高 */
  padding: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box; /* 确保 padding 不撑大容器 */
}

/* --- 文本样式 --- */
.settle-title {
  font-size: 34rpx;
  color: #3a3a3a;
  margin-top: 10rpx;
  font-weight: 500;
}

.highlight-num {
  font-size: 32rpx;
  color: #a94442; /* 丹砂红 */
  font-weight: bold;
  margin: 0 6rpx;
}

.settle-subtitle {
  font-size: 34rpx;
  color: #3a3a3a;
  margin-bottom: 22rpx;
  font-weight: 500;
}

/* --- 属性变化列表 --- */
.settle-attrs {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  gap: 40rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
}

.attr-change-item {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #3a3a3a;
}

.attr-label {
  color: #555;
}

.attr-val {
  font-family: sans-serif;
  margin-left: 8rpx;
  font-weight: bold;
}

.attr-arrow {
  color: #d81e06;
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 8rpx;
  animation: floatUp 1s infinite;
}

@keyframes floatUp {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-6rpx); }
}

/* --- 按钮样式修复 --- */
.settlement-mask .dialog-actions {
  width: 100%;
  display: flex;
  justify-content: center;
}

.settlement-mask .action-button {
  position: relative; /* 关键 */
  width: 240rpx;      /* 限制按钮宽度 */
  height: 80rpx;      /* 限制按钮高度 */
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 按钮背景图：绝对定位铺满按钮容器 */
.settlement-mask .button-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* 按钮文字：浮在背景图上面 */
.settlement-mask .button-text {
  position: relative;
  z-index: 2;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}

@keyframes popIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}